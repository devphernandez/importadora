<div class="container">
    <br />
    <!-- Importante indicar el path donde se encuentra el metodo POST -->
    <form action="/personaForm/persona/operar" method="POST">
        <input type="hidden" name="_id" value="{{persona._id}}"/>
        <div class="form-group">
            <label for="Nombre">Nombre:</label>
            <input type="nombre" class="form-control" id="nombre" name="nombre" value="{{persona.nombre}}">
        </div>
        <div class="form-group">
            <label for="apellido">Apellidos:</label>
            <input type="text" class="form-control" id="apellido" name="apellido" value="{{persona.apellido}}">
        </div>
        <div class="form-group">
            <label for="edad">Edad:</label>
            <input type="number" class="form-control" id="edad" name="edad" value="{{persona.edad}}">
        </div>
        <button type="submit" class="btn btn-primary">Aceptar</button>
        <a href="/" class="btn btn-danger">Cancelar</a>
    </form>
</div>